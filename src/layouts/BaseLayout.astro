---
import BaseHead from './base/Head.astro';
import { Link } from '../components/Links';
import { GITHUB_LINK } from '../helpers/constants';

const { content = {} } = Astro.props;
const { title, description, permalink, heroImage } = content;

const pageTitlePrefix = title ? `${title} | ` : '';
const pageTitle = pageTitlePrefix + "How long";
---

<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={pageTitle} description={description} permalink={permalink} heroImage={heroImage} />

    <style>
      main {
        height: calc(100vh - 56px);
        margin-top: 56px;
      }

      header {
        height: 56px;
      }
    </style>
  </head>

  <body class="flex flex-col min-h-screen">
    <header class="shadow-sm flex flex-row justify-center fixed top-0 w-full z-10">
      <div class="flex flex-row justify-between items-center px-3 py-2 sm:w-full md:w-wmd lg:w-wlg xl:w-wxl">
        <div class="w-8 h-8">
          <a href="/">
            <img alt="How long logo" src="/apple-touch-icon.png" class="w-full" />
          </a>
        </div>
        <!-- <button>Toggle dark/light</button> -->
      </div>
    </header>

    <main class="flex flex-1 p-4 flex-row justify-center">
      <div class="sm:w-full md:w-wmd lg:w-wlg xl:w-wxl">
        <slot />
      </div>
    </main>

    <footer class="flex flex-initial flex-row p-2 justify-center w-full">
      <div class="sm:w-full md:w-wmd lg:w-wlg xl:w-wxl">
        <p class="font-bold text-center text-xs">
          &copy; 2021 Try Ajitiono
        </p>

        <p class="text-center text-xs">
          If this interests you, kindly pay the <Link href={GITHUB_LINK}>GitHub project</Link> a visit :)
        </p>
      </div>
    </footer>
  </body>
</html>
