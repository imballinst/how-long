---
import BaseLayout from '../../layouts/BaseLayout.astro';

import json from '../../static/items.json';
import { appendExpressionToCategorizedCollection } from '../../helpers/collections';
import { CategoryDirectories } from '../../components/Directories';
import { HOME_CATEGORIES_BREADCRUMBS } from '../../helpers/paths';

const { items, date } = json;

const collections = appendExpressionToCategorizedCollection(items, new Date());
const titleCardPrefixes = { parentTitle: true, expression: true };
---

<BaseLayout
  pages={HOME_CATEGORIES_BREADCRUMBS}
  title="Categories"
  description="All categories recorded in imballinst's events tracker site."
>
  <CategoryDirectories
    updateDate={date}
    items={collections}
    title="Categories"
    {titleCardPrefixes}
    viewAllSlugPrefix="categories"
  />
</BaseLayout>
